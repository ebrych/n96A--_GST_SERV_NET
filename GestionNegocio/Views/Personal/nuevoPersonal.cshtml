<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-plus"></i> Nuevo Personal</div>
        <div class="panel-body">

            <form action="/Personal/agregarPersonal" method="post" onsubmit="loadPage()" data-toggle="validator">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <label>Nombres</label>
                    <input type="text" class="form-control" name="nom" placeholder="Nombre" required>
                    <label>Primer apellido</label>
                    <input type="text" class="form-control" name="priAp" placeholder="Apellidos" required>
                    <label>Segundo apellido</label>
                    <input type="text" class="form-control" name="segAp" placeholder="Apellidos" required>
                    <label>Tipo Documento</label>
                    <select class="form-control" name="tpoDoc">
                       @foreach (var dato in ViewBag.tipoDocumento)
                       {
                        <option value="@dato.idTipo"> @dato.descripcion </option>
                       }
                    </select>
                    <label>Número de documento</label>
                    <input type="text" class="form-control" name="doc" placeholder="Dni" pattern="^[_0-9]{1,}$" required>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <label>Telefono</label>
                    <input type="text" class="form-control" name="telf" pattern="^[_0-9]{1,}$" placeholder="Telefono">
                    <label>Direccion</label>
                    <input type="text" class="form-control" name="dir" placeholder="Direccion" required>
                    <label>Email</label>
                    <input type="email" class="form-control" name="mail" placeholder="Corro electrónico">
                    <label>Puesto</label>
                    <select class="form-control" name="tpo" required>
                        @foreach (var dato in ViewBag.tipoPersonal)
                        {
                            <option value="@dato.idTipo"> @dato.descripcion </option>
                        }
                    </select>
                    <label>Estado</label>
                    <select class="form-control" name="estado">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                    <br />
                    <button type="submit" class="btn btn-default">Guardar Personal</button>
                </div>
            </form>

        </div>
    </div>
</div>
