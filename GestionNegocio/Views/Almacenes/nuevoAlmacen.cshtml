<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-plus"></i> Nuevo Almacen</div>
        <div class="panel-body">

            <form action="/Almacenes/agregaAlmacen" method="post" onsubmit="loadPage()" data-toggle="validator">
                <label>Nombre</label>
                <input type="text" class="form-control" name="nom" placeholder="nombre almacen" required>
                <label>Direccon</label>
                <input type="text" class="form-control" name="dir" placeholder="Direccion almacen" required>
                <label>Telefono</label>
                <input type="text" class="form-control" name="telf" placeholder="Relefono almacen" pattern="^[_0-9]{1,}$" required>
                <label>Estado</label>
                <select class="form-control" name="estado">
                    <option value="1">Activo</option>
                    <option value="0">Inactivo</option>
                </select>
                <br />
                <button type="submit" class="btn btn-default">Guardar Almacen</button>
            </form>

        </div>
    </div>
</div>


