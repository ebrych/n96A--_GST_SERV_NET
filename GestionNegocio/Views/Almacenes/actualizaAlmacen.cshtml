@{
    string selectAct = "";
    string selectDes = "";
    if (ViewBag.almacen.estado.idEstado == 0)
    {
        selectAct = " ";
        selectDes = "selected";
    }
    else
    {
        selectAct = "selected";
        selectDes = " ";
    }
}

<!-- contenido -->
<nav class="navbar navbar-default" style="margin-top: 0px">
    <div class="container">
        <ul class="nav navbar-nav" id="barLeft">
            <li><a href="/Home/Panel"><i class="fas fa-columns"></i> Panel Principal</a></li>
            <li><a href="/Almacenes"><i class="fas fa-arrow-alt-circle-left"></i> Regresar Almacenes</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li align="right" id="btnHide"><a href="#" onclick="hideBarLeft()"><i class="fas fa-sort-up"></i> Ocultar </a></li>
            <li align="right" id="btnShow" style="display:none"><a href="#" onclick="showBarLeft()"><i class="fas fa-sort-down"></i> Mostrar </a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-edit"></i> Actualizar Datos</div>
        <div class="panel-body">
            <br />
            <form action="/Almacenes/actualizarDatoMaterial" method="post" onsubmit="loadPage()" data-toggle="validator">
                <input type="text" class="form-control" name="id" value="@ViewBag.almacen.idAlmacen" style="display:none" required>
                <label>Nombre</label>
                <input type="text" class="form-control" name="nom" value="@ViewBag.almacen.nombre" required>
                <label>Direccon</label>
                <input type="text" class="form-control" name="dir" value="@ViewBag.almacen.direccion" required>
                <label>Telefono</label>
                <input type="text" class="form-control" name="telf" value="@ViewBag.almacen.telefono" pattern="^[_0-9]{1,}$" required>
                <label>Estado</label>
                <select class="form-control" name="estado">
                    <option value="1" @selectAct>Activo</option>
                    <option value="0" @selectDes>Inactivo</option>
                </select>
                <br />
                <button type="submit" class="btn btn-default">Guardar Almacen</button>
            </form>
        </div>
    </div>
</div>





