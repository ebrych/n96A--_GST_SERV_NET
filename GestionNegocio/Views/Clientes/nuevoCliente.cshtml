<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-plus"></i> Nuevo Cliente</div>
        <div class="panel-body">
            <form action="/Clientes/agregarCliente" method="post" onsubmit="loadPage()" data-toggle="validator">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <label>Nombres</label>
                    <input type="text" class="form-control" name="nom" placeholder="Nombre" required>
                   
                    <label>Primer Apellido</label>
                    <input type="text" class="form-control" name="priAp" placeholder="Apellido">
                    
                    <label>Segundo Apellido</label>
                    <input type="text" class="form-control" name="segAp" placeholder="Apellido">
                    
                    <label>Tipo de Documento</label>
                    <select class="form-control" name="tpoDoc" id="tpoDoc" onchange="selectTipo()" required>
                        @foreach (var dato in ViewBag.tipoDocumento)
                        {
                            <option value="@dato.idTipo"> @dato.descripcion </option>
                        }
                    </select>
                    
                    <label>Número de documento</label>
                    <input type="text" class="form-control" name="nroDoc" placeholder="Número Documento" pattern="^[_0-9]{1,}$" required>
                    
                    <label>Teléfono</label>
                    <input type="text" class="form-control" name="telf" placeholder="Número de teléfono" pattern="^[_0-9]{1,}$">
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
         
                    <label>Celular</label>
                    <input type="text" class="form-control" name="dir" placeholder="Número celular" pattern="^[_0-9]{1,}$">
                   
                    <label>Dirección</label>
                    <input type="text" class="form-control" name="cel" placeholder="Dirección" required>
                    
                    <label>Mail</label>
                    <input type="email" class="form-control" name="mail" placeholder="Correo electrónico" required>
                    
                    <label>Tipo Cliente</label>
                    <select class="form-control" name="tpo" id="tpo" required>
                        @foreach (var dato in ViewBag.tipoCliente)
                        {
                            <option value="@dato.idTipo"> @dato.descripcion </option>
                        }
                    </select>
                    
                    <label>Estado</label>
                    <select class="form-control" name="estado">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                    <br />
                    <button type="submit" class="btn btn-default" >Guardar a Cliente Nuevo</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    selectTipo();
    function selectTipo() {
        var tpoDoc = document.getElementById("tpoDoc").value;
        if (tpoDoc == "2") {
            document.getElementById("tpo").selectedIndex = 1;
        } else {
            document.getElementById("tpo").selectedIndex = 0;
        }
    }
</script>



