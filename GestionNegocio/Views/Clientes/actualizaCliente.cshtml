
@{
    string selectedA;
    string selectedB;
    string selectAct = "";
    string selectDes = "";
    if (ViewBag.cliente.estado.idEstado == 0)
    {
        selectAct = " ";
        selectDes = "selected";
    }
    else
    {
        selectAct = "selected";
        selectDes = " ";
    }
}
<!-- contenido -->
<nav class="navbar navbar-default" style="margin-top: 0px">
    <div class="container">
        <ul class="nav navbar-nav" id="barLeft">
            <li><a href="/Home/Panel" onclick="loadPage();"><i class="fas fa-columns"></i> Panel Principal</a></li>
            <li><a href="/Clientes" onclick="loadPage();"><i class="fas fa-arrow-alt-circle-left"></i> Regresar Clientes</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li align="right" id="btnHide"><a href="#" onclick="hideBarLeft()"><i class="fas fa-sort-up"></i> Ocultar </a></li>
            <li align="right" id="btnShow" style="display:none"><a href="#" onclick="showBarLeft()"><i class="fas fa-sort-down"></i> Mostrar </a></li>
        </ul>
    </div>
