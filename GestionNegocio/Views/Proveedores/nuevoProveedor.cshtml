<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-plus"></i>Agregar Nuevo Proveedor</div>
        <div class="panel-body">

            <form action="/Proveedores/agregaProveedor" method="post" onsubmit="loadPage()" data-toggle="validator">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="nom" placeholder="Nombre" required>
                    <label>Primer Apellido</label>
                    <input type="text" class="form-control" name="prAp" placeholder="Primer Apellido" >
                    <label>Segundo Apellido</label>
                    <input type="text" class="form-control" name="sgAp" placeholder="Segundo Apellido" >
                    <label>Tipo Documento</label>
                    <select class="form-control" name="tpoDoc">
                        @foreach (var dato in ViewBag.tipoDocumento)
                        {
                            <option value="@dato.idTipo"> @dato.descripcion </option>
                        }
                    </select>
                    <label>Numero Documento</label>
                    <input type="text" class="form-control" name="numDoc" pattern="^[_0-9]{1,}$" placeholder="Número documento" required>

                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <label>Dirección</label>
                    <input type="text" class="form-control" name="dir" placeholder="Dirección" required>
                    <label>Teléfono</label>
                    <input type="text" class="form-control" name="telf" placeholder="Teléfono" pattern="^[_0-9]{1,}$" >
                    <label>Celular</label>
                    <input type="text" class="form-control" name="cel" placeholder="Celular" pattern="^[_0-9]{1,}$" >
                    <label>Correo electrónico</label>
                    <input type="email" class="form-control" name="mail" placeholder="Correo Electrónico" >
                    <label>Estado</label>
                    <select class="form-control" name="estado">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                    <br />
                    <button type="submit" class="btn btn-default">Guardar Proveedor</button>
                </div>

            </form>

        </div>
    </div>
</div>


