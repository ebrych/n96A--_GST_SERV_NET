@{
    string selected;
    string selectAct = "";
    string selectDes = "";
    if (ViewBag.proveedor.estado.idEstado == 0)
    {
        selectAct = " ";
        selectDes = "selected";
    }
    else
    {
        selectAct = "selected";
        selectDes = " ";
    }
}

<!-- contenido -->
<nav class="navbar navbar-default" style="margin-top: 0px">
    <div class="container">
        <ul class="nav navbar-nav" id="barLeft">
            <li><a href="/Panel"><i class="fas fa-columns"></i> Panel Principal</a></li>
            <li><a href="/Proveedores"><i class="fas fa-arrow-alt-circle-left"></i> Regresar Proveedores</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li align="right" id="btnHide"><a href="#" onclick="hideBarLeft()"><i class="fas fa-sort-up"></i> Ocultar </a></li>
            <li align="right" id="btnShow" style="display:none"><a href="#" onclick="showBarLeft()"><i class="fas fa-sort-down"></i> Mostrar </a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-edit"></i>Actualizar Datos Proveedor</div>
        <div class="panel-body">

            <form action="/Proveedores/actualizarDatoProveedor" method="post" onsubmit="loadPage()" data-toggle="validator">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <input type="text" class="form-control" name="id" value="@ViewBag.proveedor.idProveedor" style="display:none" required>
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="nom" value="@ViewBag.proveedor.nombres" required>
                    <label>Primer Apellido</label>
                    <input type="text" class="form-control" name="prAp" value="@ViewBag.proveedor.primerApellido" required>
                    <label>Segundo Apellido</label>
                    <input type="text" class="form-control" name="sgAp" value="@ViewBag.proveedor.segundoApellido" required>
                    <label>Tipo Documento</label>
                    <select class="form-control" name="tpoDoc">
                        @foreach (var dato in ViewBag.tipoDocumento)
                        {
                            if (dato.idTipo == @ViewBag.proveedor.tipoDocumento.idTipo)
                            {
                                selected = "selected";
                            }
                            else
                            {
                                selected = "";
                            }
                            <option value="@dato.idTipo" @selected> @dato.descripcion </option>
                        }
                    </select>
                    <label>Numero Documento</label>
                    <input type="text" class="form-control" name="numDoc" value="@ViewBag.proveedor.numeroDocumento"  required>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <label>Dirección</label>
                    <input type="text" class="form-control" name="dir" value="@ViewBag.proveedor.direccion" required>
                    <label>Teléfono</label>
                    <input type="text" class="form-control" name="telf" value="@ViewBag.proveedor.telefono"pattern="^[_0-9]{1,}$" required>
                    <label>Celular</label>
                    <input type="text" class="form-control" name="cel" value="@ViewBag.proveedor.celular" pattern="^[_0-9]{1,}$" required>
                    <label>Correo electrónico</label>
                    <input type="email" class="form-control" name="mail" value="@ViewBag.proveedor.mail" required>
                    <label>Estado</label>
                    <select class="form-control" name="estado">
                        <option value="1" @selectAct>Activo</option>
                        <option value="0" @selectDes>Inactivo</option>
                    </select>
                    <br />
                    <button type="submit" class="btn btn-default">Guardar Proveedor</button>
                </div>
            </form>

        </div>
    </div>
</div>

