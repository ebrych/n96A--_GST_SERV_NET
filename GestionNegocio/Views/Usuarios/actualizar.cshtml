@{
    string selected;
    string selectAct = "";
    string selectDes = "";
    if (ViewBag.user.estado.idEstado == 0)
    {
        selectAct = " ";
        selectDes = "selected";
    }
    else
    {
        selectAct = "selected";
        selectDes = " ";
    }
}
<!-- contenido -->
<nav class="navbar navbar-default" style="margin-top: 0px">
    <div class="container">
        <ul class="nav navbar-nav" id="barLeft">
            <li><a href="/Panel"><i class="fas fa-columns"></i> Panel Principal</a></li>
            <li><a href="/Usuarios"><i class="fas fa-arrow-alt-circle-left"></i> Regresar Usuarios</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li align="right" id="btnHide"><a href="#" onclick="hideBarLeft()"><i class="fas fa-sort-up"></i> Ocultar </a></li>
            <li align="right" id="btnShow" style="display:none"><a href="#" onclick="showBarLeft()"><i class="fas fa-sort-down"></i> Mostrar </a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-edit"></i> Actualizar Datos</div>
        <div class="panel-body">

            <form action="/Usuarios/actualizarUser" method="post" onsubmit="loadPage()">

                <input type="text" class="form-control" name="idt" value="@ViewBag.user.idUsuario" style="display:none">
                <label>Nombre</label>
                <input type="text" class="form-control" name="nombre" value="@ViewBag.user.nombres" required>
                <label>Mail</label>
                <input type="email" class="form-control" name="mail" value="@ViewBag.user.mail" required>
                <label>Rol</label>
                <select class="form-control" name="role">
                    @foreach (var dato in ViewBag.misRoles)
                    {
                        if (dato.idRole == ViewBag.user.role.idRole)
                        {
                            selected = "selected";
                        }
                        else
                        {
                            selected = "";
                        }
                        <option value="@dato.idRole" @selected> @dato.descripcion </option>
                    }
                </select>

                <label>Estado</label>
                <select class="form-control" name="estado">
                    <option value="1" @selectAct>Activo</option>
                    <option value="0" @selectDes>Inactivo</option>
                </select>
                <br />
                <button type="submit" class="btn btn-default">Guardar Datos</button>
            </form>

        </div>
    </div>
</div>
