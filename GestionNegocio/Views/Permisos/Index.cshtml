

@{
    int i = 1;
}
<!-- contenido -->
<nav class="navbar navbar-default" style="margin-top: 0px">
    <div class="container">
        <ul class="nav navbar-nav" id="barLeft">
            <li><a href="/Panel" onclick="loadPage();"><i class="fas fa-columns"></i> Panel Principal</a></li>
            <li><a href="/Permisos/nuevoRol" onclick="loadPage();"><i class="fas fa-plus-circle"></i> Agregar nuevo Rol</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li align="right" id="btnHide"><a href="#" onclick="hideBarLeft()"><i class="fas fa-sort-up"></i> Ocultar </a></li>
            <li align="right" id="btnShow" style="display:none"><a href="#" onclick="showBarLeft()"><i class="fas fa-sort-down"></i> Mostrar </a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-clipboard-list"></i> Lista de Permisos</div>
        <div class="panel-body">

            <div id="Permisos">
                <div class="form-inline" align="right"><label style="color:#636e72"> <i class="fas fa-search"></i> Filtrar: &nbsp;&nbsp;</label><input class="search form-control" placeholder="Busqueda en la lista" style="width:90%" /></div>
                <br />
                <div class="table-responsive">
                    <table id="table_Usuarios" class="table table-hover">
                        <thead>
                            <tr>
                                <th># <button class="sort" data-sort="num" style="background-color:transparent;border:0px"><span class="glyphicon glyphicon-sort" style="font-size:12px" aria-hidden="true"></span></button></th>
                                <th>Nombre del Rol <button class="sort" data-sort="desc" style="background-color:transparent;border:0px"><span class="glyphicon glyphicon-sort" style="font-size:12px" aria-hidden="true"></span></button></th>
                                <th><center>Permisos</center></th>
                                <th><center>Actualizar</center></th>
                                <th><center>Eliminar</center></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var dato in ViewBag.roles)
                            {
                                <tr>
                                    <td class="num">@i</td>
                                    <td class="desc">@dato.descripcion</td>
                                    <td align="center"><a class="btn btn-default" href="/Permisos/Permisos/?ident=@dato.idRole " role="button"> <i class="fas fa-users-cog"></i> </a></td>
                                    <td align="center"><a class="btn btn-default" href="/Permisos/actualizaRol/?ident=@dato.idRole " role="button"> <i class="fas fa-pencil-alt"></i></a></td>
                                    <td align="center"><a class="btn btn-danger" href="/Permisos/eliminaRol?ident=@dato.idRole" role="button"><i class="fas fa-trash-alt"></i></a></td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
                <div align="right"><ul class="pagination"></ul></div>
            </div>

        </div>
    </div>
</div>

<script>
    var options = {
        valueNames: ['num','desc'],
		page: 10,
        pagination: true
    };
    var userList = new List('Permisos', options);
</script>

