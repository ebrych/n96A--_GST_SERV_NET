<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-plus"></i> Nuevo Cliente</div>
        <div class="panel-body">
            <form action="/Material/agregaMaterial" method="post" onsubmit="loadPage()">
                <label>Descripcion</label>
                <input type="text" class="form-control" name="desc" placeholder="Descripcion del material" required>
                <label>Tipo de Material</label>
                <select class="form-control" name="tpo" required>
                    @foreach (var dato in ViewBag.tipoMaterial)
                    {
                        <option value="@dato.idTipo"> @dato.descripcion </option>
                    }
                </select>
                <label>Unidad de material</label>
                <input type="text" class="form-control" name="unidad" placeholder="Litros,kilogramos,etc" required>
                <label>Estado</label>
                <select class="form-control" name="estado">
                    <option value="1">Activo</option>
                    <option value="0">Inactivo</option>
                </select>
                <br />
                <button type="submit" class="btn btn-default">Guardar Material</button>
            </form>
        </div>
    </div>
</div>


