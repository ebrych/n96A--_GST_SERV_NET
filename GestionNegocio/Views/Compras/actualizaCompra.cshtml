<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-plus"></i> Nueva Compra</div>
        <div class="panel-body">

            <form action="/Compras/actualizaDato" method="post" onsubmit="loadPage()" data-toggle="validator">
                <input type="text" class="form-control" name="id" value="@ViewBag.miCompra.idCompra" style="display:none" required>
                <label>Descripcion</label>
                <input type="text" class="form-control" name="desc" value="@ViewBag.miCompra.descripcion" required>
                <label>Proveedores</label><br />
                <select class="selectpicker" data-live-search="true" name="prov" required>
                    @foreach (var dato in ViewBag.proveedores)
                    {
                        <option value="@dato.idProveedor"> @dato.nombres @dato.primerApellido @dato.segundoApellido </option>
                    }
                    <option value="@ViewBag.miCompra.proveedor.idProveedor"> @ViewBag.miCompra.proveedor.nombres @ViewBag.miCompra.proveedor.primerApellido @ViewBag.miCompra.proveedor.segundoApellido </option>
                </select><br />
                <br />
                <button type="submit" class="btn btn-default">Guardar Compra</button>
            </form>

        </div>
    </div>
</div>
