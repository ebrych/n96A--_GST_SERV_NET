@{
    int i = 1;
    string displayCompra = "none";
    string displayOrdenPedido = "none";
    if (ViewBag.idTipo == 1)
    {
        displayCompra = "block";
    }
    if(ViewBag.idTipo == 2)
    {
        displayOrdenPedido = "block";
    }
}
<!-- contenido -->
