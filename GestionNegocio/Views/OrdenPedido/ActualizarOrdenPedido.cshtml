<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fas fa-clipboard-list"></i> Lista de Elementos</div>
        <div class="panel-body">

            <form action="/OrdenPedido/actualizaDatoOrdenPedido" method="post" onsubmit="loadPage()">
                <input type="text" class="form-control" name="id" value="@ViewBag.ordenPedido.idOrdenPedido" style="display:none" required>
                <label>Negocios</label>
                <select class="form-control" name="negocio" required>
                    @foreach (var dato in ViewBag.negocios)
                    {
                        <option value="@dato.idNegocio"> @dato.nombre</option>
                    }
                    <option value="@ViewBag.ordenPedido.negocio.idNegocio"> @ViewBag.ordenPedido.negocio.nombre</option>

                </select>
                <label>Descripción</label>
                <input type="text" class="form-control" name="desc" value="@ViewBag.ordenPedido.descripcion" required>
                <br />
                <button type="submit" class="btn btn-default">Guardar Orden de Pedido</button>
            </form>

        </div>
    </div>
</div>
